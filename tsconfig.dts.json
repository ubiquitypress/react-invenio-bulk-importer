{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/styled-system/*": ["./styled-system/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"]
}